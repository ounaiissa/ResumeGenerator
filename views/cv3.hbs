  <body>
    <div style="margin-top: 80px;" class="btn-group" >
      <button style="background-color: #3c5e80; border:#3c5e80 solid; border-radius:20px; color:#fff;" id="perso">Personal Infos</button>
      <button style="background-color: #3c5e80; border:#3c5e80 solid; border-radius:20px; color:#fff;" id="prof">Professionnal Infos</button>
    </div>

   

    <div  id="CV-form" class="CV-form">
      
      <form action="/createcv2" method="POST">
        <div  class="d-flex flex-row" >
        <div style="display: none" class="perso">
          <div class="form-group mt-2">
            <label for="">Select your profile picture</label>
            <input id="imgField" type="file" class="form-control">
          </div>
          <div class="row">
            <div class="col">
              <label for="FullName"> Full name</label>
              <input
                id="FullName"
                name="FullName"
                type="text"
                class="form-control"
                placeholder="Full name"
              />
            </div>
            <div class="col">
              <label for="JobTitle"> job-title</label>
              <input
                id="JobTitle"
                name="JobTitle"
                type="text"
                class="form-control"
                placeholder="Enter your Job Title"
              />
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  id="email"
                  placeholder="Email"
                />
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="phone">phone number</label>
              <input
                type=""
                name="phone"
                class="form-control"
                id="phone"
                placeholder="Enter Phone number"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="inputAddress">Address</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              placeholder="1234 Main St"
            />
          </div>
           <div class="form-group">
            <label for="inputAddress">Facebook</label>
            <input
              type="text"
              class="form-control"
              id="facebook"
              name="Twitter "
              placeholder="@username"
            />
          </div>
          <div class="form-group">
            <label for="inputAddress">Twitter</label>
            <input
              type="text"
              class="form-control"
              id="Twitter"
              name="Twitter "
              placeholder="@username"
            />
          </div>
          <div class="form-group">
            <label for="inputAddress">LinkedIn</label>
            <input
              type="text"
              class="form-control"
              id="LinkedIn"
              name="LinkedIn"
              placeholder="@username"
            />
          </div>

          <div class="form-group" id="SKL">

            <label for="inputAddress"></label>
            <textarea
              type="text"
              class="form-control Skillsfield"
              id="skills1"
              name="skills1"
              placeholder="Enter your skills"
            ></textarea>
             <label for="inputAddress"></label>
            <textarea
              type="text"
              class="form-control Skillsfield"
              id="skills2"
              name="skills2"
              placeholder="Enter your skills"
            ></textarea>
             <label for="inputAddress"></label>
            <textarea
              type="text"
              class="form-control Skillsfield"
              id="skills3"
              name="skills3"
              placeholder="Enter your skills"
            ></textarea>
            <div class="container text-center mt-2" id="AddBtnSK">
              <input type="button" value="Add" onclick="addNewSKfield()" class="btn btn-secondary">
            
            </input>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Enter you objective</label>
            <textarea
              class="form-control"
              id="objective"
              name="objective"
              rows="3"
            ></textarea>
          </div>
           </div>


        <div  class="prof">
         
          <div class="form-group" id="ED">
            <label for="exampleFormControlTextarea1">Enter your first education year</label>
            <input
              class="form-control"
              id="EDdate1"
              rows="2"
            />
            <label for="exampleFormControlTextarea1">Enter your first education title</label>
            <input
              class="form-control"
              id="EDtitle1"
              rows="2"
            />
            <label for="exampleFormControlTextarea1">Enter your first education info</label>
            <input
              class="form-control"
              id="education1"
              rows="2"
            />

             <label for="exampleFormControlTextarea1">Enter your second education year</label>
            <input
              class="form-control"
              id="EDdate2"
              rows="1"
            />
            <label for="exampleFormControlTextarea1">Enter your second education title</label>
            <input
              class="form-control"
              id="EDtitle2"
              rows="1"
            />
            <label for="exampleFormControlTextarea1">Enter your second education info</label>
            <input
              class="form-control "
              id="education2"
               rows="2"
            />
          
           
          </div>
          <div class="form-group " id="EXP">
            <label for="exampleFormControlTextarea1">Enter your year of experience</label>
            <textarea
              class="form-control "
              id="EXPdate1"
              rows="1"
            ></textarea>
            <label for="exampleFormControlTextarea1">Enter your experience title</label>
            <textarea
              class="form-control "
              id="EXPtitle1"
              name="experience"
              rows="1"
            ></textarea>
            <label for="exampleFormControlTextarea1">Enter your experience</label>
            <textarea
              class="form-control "
              id="EXPinfo1"
              name="experience"
              rows="3"
            ></textarea>

            <label for="exampleFormControlTextarea1">Enter your year of experience</label>
            <textarea
              class="form-control "
              id="EXPdate2"
              rows="1"
            ></textarea>
            <label for="exampleFormControlTextarea1">Enter your experience title</label>
            <textarea
              class="form-control "
              id="EXPtitle2"
              name="experience"
              rows="1"
            ></textarea>
            <label for="exampleFormControlTextarea1">Enter your experience</label>
            <textarea
              class="form-control "
              id="EXPinfo2"
              name="experience"
              rows="3"
            ></textarea>


            <label for="exampleFormControlTextarea1">Enter your year of experience</label>
            <textarea
              class="form-control "
              id="EXPdate3"
              rows="1"
            ></textarea>
            <label for="exampleFormControlTextarea1">Enter your experience title</label>
            <textarea
              class="form-control "
              id="EXPtitle3"
              name="experience"
              rows="1"
            ></textarea>
            <label for="exampleFormControlTextarea1">Enter your experience</label>
            <textarea
              class="form-control "
              id="EXPinfo3"
              name="experience"
              rows="3"
            ></textarea>
          </div>
           </div>
       </div>
       
        <br />
        <div class="col-sm-10">
          <center>
          <input class="btn btn-secondary text-center " type="button" id="Submit" value="Generate Resume" />
        </center>
        </div>
      </form>
    </div>

